// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Thing {
  id          String   @id
  tenantId    String
  title       String
  types       String[]
  description Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([tenantId, id])
}

model DiscoveredThing {
  id          String   @id
  tenantId    String
  title       String
  types       String[]
  description Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([tenantId, id])
}
